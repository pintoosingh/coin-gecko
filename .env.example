# App
NODE_ENV=development
PORT=3000

# Coingecko
COINGECKO_BASE=https://api.coingecko.com/api/v3
VS_CURRENCY=usd
PER_PAGE=250
COINGECKO_MAX_PAGES=5

# Redis (host Redis)
# When running inside Docker on Windows/Mac use host.docker.internal to reach host
# When running on Linux you can use host network mode (see note below).
REDIS_URL=redis://host.docker.internal:6379
PRICE_CACHE_TTL_SECONDS=30
PRICE_UPDATE_INTERVAL_MS=60000

# Postgres (host Postgres)
DATABASE_URL=postgresql://user:abc123@host.docker.internal:5432/pricesdb
